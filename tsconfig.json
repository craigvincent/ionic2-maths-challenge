{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "filesGlob": [
    "**/*.ts",
    "!node_modules/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "files": [
    "app/app.ts",
    "app/model/Answer.ts",
    "app/model/Operator.ts",
    "app/model/Question.ts",
    "app/pages/page1/page1.ts",
    "app/pages/page2/quizconfig.ts",
    "app/pages/page3/page3.ts",
    "app/pages/tabs/tabs.ts",
    "app/services/quiz.service.ts",
    "typings/browser.d.ts",
    "typings/browser/ambient/es6-shim/index.d.ts"
  ]
}
